nextflow_process {

    name "Test Process COPY"
    script "copy.nf"
    process "COPY"

    test("BAM") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [id:"bam"],
                    file("${baseDir}/data/test.paired_end.bam")
                ])
                """
            }
        }

        then {
            assert snapshot(process.out.copy.collect { file(it[1]).name }).match()
        }

    }

    test("CRAM") {

        when {
            process {
                """
                input[0] = Channel.of([
                    [id:"cram"],
                    file("${baseDir}/data/test.paired_end.cram")
                ])
                """
            }
        }

        then {
            assert snapshot(process.out.copy.collect { file(it[1]).name }).match()
        }

    }

}
